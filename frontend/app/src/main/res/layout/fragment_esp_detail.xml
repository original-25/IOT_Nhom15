<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="24dp">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@android:drawable/ic_menu_slideshow"
                app:tint="#333333" />

            <TextView
                android:id="@+id/tv_detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Tên thiết bị"
                android:textColor="#333333"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_detail_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Trạng thái: Online"
                android:textColor="#4CAF50"
                android:textSize="14sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:stretchColumns="1">

            <TableRow android:paddingVertical="8dp">
                <TextView
                    android:text="ID:"
                    android:textStyle="bold"
                    android:textColor="#757575" />
                <TextView
                    android:id="@+id/tv_detail_id"
                    android:layout_marginStart="16dp"
                    android:text="---"
                    android:textColor="#212121" />
            </TableRow>

            <View android:layout_height="1dp" android:background="#EEEEEE" />

            <TableRow android:paddingVertical="8dp">
                <TextView
                    android:text="MQTT Topic:"
                    android:textStyle="bold"
                    android:textColor="#757575" />
                <TextView
                    android:id="@+id/tv_detail_topic"
                    android:layout_marginStart="16dp"
                    android:text="---"
                    android:textSize="12sp"
                    android:textColor="#212121" />
            </TableRow>

            <View android:layout_height="1dp" android:background="#EEEEEE" />

            <TableRow android:paddingVertical="8dp">
                <TextView
                    android:text="Ngày tạo:"
                    android:textStyle="bold"
                    android:textColor="#757575" />
                <TextView
                    android:id="@+id/tv_detail_created"
                    android:layout_marginStart="16dp"
                    android:text="---"
                    android:textColor="#212121" />
            </TableRow>

            <View android:layout_height="1dp" android:background="#EEEEEE" />

            <TableRow android:paddingVertical="8dp">
                <TextView
                    android:text="Kích hoạt lúc:"
                    android:textStyle="bold"
                    android:textColor="#757575" />
                <TextView
                    android:id="@+id/tv_detail_claimed"
                    android:layout_marginStart="16dp"
                    android:text="---"
                    android:textColor="#212121" />
            </TableRow>

            <View android:layout_height="1dp" android:background="#EEEEEE" />

            <TableRow android:paddingVertical="8dp">
                <TextView
                    android:text="Cập nhật cuối:"
                    android:textStyle="bold"
                    android:textColor="#757575" />
                <TextView
                    android:id="@+id/tv_detail_updated"
                    android:layout_marginStart="16dp"
                    android:text="---"
                    android:textColor="#212121" />
            </TableRow>
        </TableLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/btn_detail_update"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:backgroundTint="#3F51B5"
            android:text="Cập nhật"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btn_detail_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:backgroundTint="#F44336"
            android:text="Xóa thiết bị"
            android:textColor="@android:color/white" />

    </LinearLayout>

</LinearLayout>